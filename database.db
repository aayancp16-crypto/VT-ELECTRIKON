import sqlite3

# Connect to your database (creates file if it doesn't exist)
conn = sqlite3.connect("database.db")
c = conn.cursor()

# Create table if it doesn't exist
c.execute("""
CREATE TABLE IF NOT EXISTS products (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    price REAL NOT NULL
)
""")

conn.commit()
conn.close()

